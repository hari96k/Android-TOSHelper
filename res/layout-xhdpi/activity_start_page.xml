<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/Helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:contentDescription="@string/helper_lady"
        android:src="@drawable/helper" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/HelperTitle"
        android:layout_alignEnd="@+id/HelperTitle"
        android:layout_alignRight="@+id/HelperTitle"
        android:background="@color/lightTint"
        android:paddingTop="5dp"
        android:text="@string/patch"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/HelperTitle"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:background="@color/lightTint"
        android:gravity="center"
        android:text="@string/version"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:gravity="center">

        <ImageView
            android:id="@+id/buttonSalemClassic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/buttonCovenModes"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/salem_classic"
            android:onClick="goToClassicModes"
            android:src="@drawable/button_salem_classic" />

        <ImageView
            android:id="@+id/buttonCovenModes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/buttonWiki"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/coven_modes"
            android:onClick="goToCovenModes"
            android:src="@drawable/buttton_coven_modes" />

        <ImageView
            android:id="@+id/buttonWiki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/buttonTips"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/wiki"
            android:onClick="goToWiki"
            android:src="@drawable/button_wiki" />

        <ImageView
            android:id="@+id/buttonTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/tips"
            android:onClick="goToTips"
            android:src="@drawable/button_tips" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/HelperTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TOSTitle"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/helper"
        android:onClick="goToAbout"
        android:src="@drawable/assistant_text" />

    <ImageView
        android:id="@+id/TOSTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/town_of_salem"
        android:src="@drawable/tos" />


</RelativeLayout>
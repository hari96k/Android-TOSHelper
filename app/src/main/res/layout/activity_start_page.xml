<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/TOSTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/town_of_salem"
        android:src="@drawable/tos" />

    <ImageView
        android:id="@+id/HelperTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TOSTitle"
        android:layout_alignRight="@+id/TOSTitle"
        android:layout_below="@+id/TOSTitle"
        android:contentDescription="@string/helper"
        android:src="@drawable/assistant_text" />

    <TextView
        android:id="@+id/patchNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/HelperTitle"
        android:layout_alignEnd="@+id/buttonCustom"
        android:layout_alignRight="@+id/buttonCustom"
        android:paddingTop="5dp"
        android:text="@string/patch"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/Helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/HelperTitle"
        android:layout_toStartOf="@+id/buttonAbout"
        android:contentDescription="@string/helper_lady"
        android:src="@drawable/helper"
        android:layout_toLeftOf="@+id/buttonAbout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/HelperTitle"
        android:layout_alignEnd="@+id/patchNumber"
        android:layout_alignRight="@+id/patchNumber"
        android:text="@string/version"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/buttonRanked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/buttonClassic"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/ranked_button"
        android:onClick="goToRanked"
        android:src="@drawable/button_ranked" />

    <ImageView
        android:id="@+id/buttonClassic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/buttonCustom"
        android:contentDescription="@string/classic_mode"
        android:onClick="goToClassic"
        android:src="@drawable/button_classic" />

    <ImageView
        android:id="@+id/buttonCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/buttonTips"
        android:contentDescription="@string/rainbow_mode"
        android:onClick="goToRainbow"
        android:src="@drawable/button_rainbow" />

    <ImageView
        android:id="@+id/buttonTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/buttonAbout"
        android:contentDescription="@string/tips"
        android:onClick="goToTips"
        android:src="@drawable/button_tips" />

    <ImageView
        android:id="@+id/buttonAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/aboutTitle"
        android:onClick="goToAbout"
        android:src="@drawable/button_about"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>